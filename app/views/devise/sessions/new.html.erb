
<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title", style="text-align: center;">
        ログイン
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered", style="height: 450px;">
      <div class="column is-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス, class: "label" %>
            <p class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "アドレスを入力", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>

          <div class="field">
            <%= f.label :パスワード, class: "label" %>
            <p class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワードを入力", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>

          <div class="session", style="text-align: center; margin-top: 30px;">
            <div class="actions">
              <%= f.submit "ログイン", class: "button is-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>