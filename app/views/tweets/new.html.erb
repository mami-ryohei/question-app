<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        質問作成
      </h1>
    </div>
  </div>
</section>


<% if @tweet.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @tweet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="section">
  <div class="container">
    <%= form_for @tweet do |f| %>
      <div class="field">
        <%= f.label :title, "タイトル", class: "label" %>
        <%= f.text_field :title, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :body, "本文", class: "label" %>
        <%= f.text_area :body, class: "textarea" %>
      </div>

      <div class="field">
        <%= f.label :image, "写真", class: "label" %>
        <%= f.attachment_field :image, class: "input" %>
      </div>
      <div class="session", style="text-align: center; margin-top: 30px;">
        <%= f.submit '送信する', class: "button is-link" %>
      </div>
    <% end %>
  </div>
</section>